<h2>Account Settings</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.email_field :email, :placeholder => "Email" %>
  </div>

  <div>
    <%= f.password_field :password, :autocomplete => "off", :placeholder => "New Password", :"data-placement" => "right", :"data-trigger" => "focus", :"data-toggle" => "tooltip", :title => "Leave blank if you don't want to change your password." %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>
  </div>

  <div>
    <%= f.password_field :current_password, :placeholder => "Current Password", :"data-placement" => "right", :"data-trigger" => "focus", :"data-toggle" => "tooltip", :title => "We need your current password to confirm your changes." %>
  </div>

  <div><%= f.submit "Update", :class => "btn btn-primary" %></div>
<% end %>
<br /><br />  
<div class="hero-unit" style="padding: 30px;">
  <h3 style="margin: 0;">Cancel my account</h3>
  <p style="margin: 0 0 5px;">Unhappy?</p>
  <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger" %>
</div>

<script type="text/javascript">
  $(function(){
    $('#buyer_current_password').tooltip();
    $('#buyer_password').tooltip();
  })
</script>