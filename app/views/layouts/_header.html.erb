<div class="navbar navbar-static-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">Service Providers</a>
      <div class="container nav-collapse">
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% if current_user.class.to_s == "ServiceProvider" %>
                  <li><%= link_to "My Profile", service_provider_path(current_user.uuid)  %></li>
                <% elsif current_user.class.to_s == "Buyer" %>
                  <li><%= link_to "My Profile", buyer_path(current_user.uuid)  %></li>
                <% end %>  
                <% if current_user.class.to_s == "ServiceProvider" %>
                  <li><%= link_to "Account Settings", edit_service_provider_registration_path %></li>
                <% elsif current_user.class.to_s == "Buyer" %>
                  <li><%= link_to "Account Settings", edit_buyer_registration_path %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "Sign Out", destroy_user_session_path  %></li>
              </ul>
            <% else %>
            <li><%= link_to "Service Providers", new_service_provider_registration_path  %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Buyers", new_buyer_registration_path  %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Sign In", user_session_path  %></li>
          <% end %>  
        </ul>
        <% if user_signed_in? %>
        <form class="navbar-search pull-right">
          <input type="text" class="search-query" placeholder="Search">
        </form>
        <% end %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>




